# syntax=docker/dockerfile:1
FROM python:3.13-slim AS build

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Set working dir to app
WORKDIR /app

# Set environment variables for uv optimization
ENV UV_COMPILE_BYTECODE=1 \
    UV_LINK_MODE=copy

# Copy lock file and project metadata
COPY uv.lock pyproject.toml ./

# Install dependencies into a virtual environment
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --no-install-project --no-dev

# Copy the rest of the application code
COPY src .
COPY scheduler.py .

# Re-sync in frozen mode to ensure consistency with the lock file
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-dev

FROM python:3.13-slim AS runtime

# Add the virtual environment to the PATH
ENV PATH="/app/.venv/bin:$PATH"

# Create a non-root user for security
RUN groupadd -g 1001 appgroup && \
    useradd -u 1001 -g appgroup -m -d /app -s /bin/false appuser

# Set working dir to app
WORKDIR /app

# Copy the built application and virtual environment from the build stage
COPY --from=build --chown=appuser:appgroup /app .

# Set user to appuser
USER appuser

# Execute scheduler
ENTRYPOINT ["python", "scheduler.py"]
